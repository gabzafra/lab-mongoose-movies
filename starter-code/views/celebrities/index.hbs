<h2>Celebrity list</h2>
<ul>
  {{#each celebs}}
  <li>
    <a href="/celebrities/{{_id}}">{{name}}</a>
    <form action="/celebrities/{{_id}}/delete" method="POST">
      <input type="text" hidden name="id" value="{{id}}">
      <button type="submit">Delete</button>
    </form>
  </li>
  {{/each}}
</ul>